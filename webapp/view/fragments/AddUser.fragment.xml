<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form">

    <!-- Dialog container -->
    <Dialog 
        id="addUserDialog" 
        title="Add User" 
        draggable="true" 
        resizable="true" 
        contentWidth="600px"
        contentHeight="auto">
        
        <VBox class="sapUiSmallMargin">
            <!-- SimpleForm for user inputs -->
            <layout:SimpleForm
                id="addUserForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanM="3"
                columnsM="2">
                
                <!-- Form fields -->
                <Title text="Add New User" />

                <Label text="First Name" />
                <Input id="firstName" />

                <Label text="Last Name" />
                <Input id="lastName" />

                <Label text="Email" />
                <Input id="emailID" />

                <Label text="Phone" />
                <Input id="phone" />

                <Label text="Role" />
                <Input id="role" />

                <Label text="Department" />
                <Input id="department" />

                <Label text="User Type" />
                <Input id="userType" />

                <Label text="Access Type" />
                <Input id="accessType" />

                <Label text="Language" />
                <Input id="language" />

                <Label text="Status" />
                <Input id="status" />

                <Title text="Address" />

                <Label text="Address 1" />
                <Input id="address1" />

                <Label text="City" />
                <Input id="city" />

                <Label text="State" />
                <Input id="state" />

                <Label text="Country" />
                <Input id="country" />

                <Label text="Zipcode" />
                <Input id="zipcode" />

                <Label text="Location" />
                <Input id="location" />
            </layout:SimpleForm>

            <!-- Save button -->
           <HBox>
                 <Button
                text="Save"
                type="Emphasized"
                press=".onSavePress"
                class="sapUiTinyMarginTop"
            />
             <Button
                text="cancel"
                press=".onCancelPress"
                class="sapUiTinyMarginTop"
            />
           </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
